pipeline {
  
  agent any {
    
    stages {
        stage("Build") {
            steps {
                echo 'build the application'
            }
        }
        stage("Test") {
            steps {
                echo 'Test the application'
            }
        }
        stage("Deploy") {
            steps {
                echo 'deploying the application'
            }
        }
    }
}
